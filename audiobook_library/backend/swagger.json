{
  "swagger": "2.0",
  "info": {
    "title": "Audiobook Library API",
    "description": "Audiobook Library CRUD API",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http", "https"],
  "securityDefinitions": {
    "googleOAuth2": {
      "type": "oauth2",
      "flow": "implicit",
      "authorizationUrl": "/auth/google",
      "scopes": {
        "profile": "Access your profile information",
        "email": "Access your email address"
      }
    },
    "cookieAuth": {
      "type": "apiKey",
      "in": "cookie",
      "name": "connect.sid",
      "description": "Session cookie for authentication"
    }
  },
  "security": [
    {
      "cookieAuth": []
    }
  ],
  "paths": {
    "/audiobooks": {
      "get": {
        "description": "Get all audiobooks",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new audiobook",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "any" },
                "author": { "example": "any" },
                "listening_length": { "example": "any" },
                "publisher": { "example": "any" },
                "narrator": { "example": "any" },
                "ASIN": { "example": "any" },
                "audio_release_date": { "example": "any" },
                "description": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/audiobooks/{id}": {
      "get": {
        "description": "Get audiobook by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update audiobook by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "any" },
                "author": { "example": "any" },
                "listening_length": { "example": "any" },
                "publisher": { "example": "any" },
                "narrator": { "example": "any" },
                "ASIN": { "example": "any" },
                "audio_release_date": { "example": "any" },
                "description": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete audiobook by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/users": {
      "get": {
        "description": "Get all users",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "googleId": { "example": "any" },
                "displayName": { "example": "any" },
                "firstName": { "example": "any" },
                "lastName": { "example": "any" },
                "email": { "example": "any" },
                "date": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/users/{id}": {
      "get": {
        "description": "Get user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "googleId": { "example": "any" },
                "displayName": { "example": "any" },
                "firstName": { "example": "any" },
                "lastName": { "example": "any" },
                "email": { "example": "any" },
                "date": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/auth/google": {
      "get": {
        "description": "Authenticate with Google",
        "responses": {
          "302": { "description": "Redirect to Google" }
        }
      }
    },

    "/auth/google/callback": {
      "get": {
        "description": "Google OAuth callback",
        "responses": {
          "302": {
            "description": "Redirect to home page on success, or login-failed on failure"
          }
        }
      }
    },

    "/auth/me": {
      "get": {
        "description": "Get current authenticated user",
        "responses": {
          "200": { "description": "OK - Returns user info if authenticated" },
          "401": { "description": "Unauthorized - Not logged in" }
        }
      }
    },

    "/auth/logout": {
      "get": {
        "description": "Logout current user",
        "responses": {
          "302": { "description": "Redirect to home page" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/auth/login-failed": {
      "get": {
        "description": "Login failed page",
        "responses": {
          "401": { "description": "Unauthorized" }
        }
      }
    },

    "/auth/users": {
      "get": {
        "description": "Get all users (protected)",
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/api-docs": {
      "get": {
        "description": "Swagger UI",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    }
  }
