{
  "swagger": "2.0",
  "info": {
    "title": "Audiobook Library API",
    "description": "Audiobook Library CRUD API",
    "version": "1.0.0"
  },
  "basePath": "/",
  "paths": {
    "/audiobooks": {
      "get": {
        "summary": "Get all audiobooks",
        "responses": {
          "200": {
            "description": "List of audiobooks"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "Create a new audiobook",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "title",
                "author",
                "listening_length",
                "publisher",
                "narrator",
                "ASIN",
                "audio_release_date",
                "description"
              ],
              "properties": {
                "title": { "type": "string", "example": "Twilight" },
                "author": { "type": "string", "example": "Stephenie Meyer" },
                "listening_length": {
                  "type": "string",
                  "example": "12 hours and 51 minutes"
                },
                "publisher": {
                  "type": "string",
                  "example": "Listening Library"
                },
                "narrator": { "type": "string", "example": "Ilyana Kadushin" },
                "ASIN": { "type": "string", "example": "B000BO2D64" },
                "audio_release_date": {
                  "type": "string",
                  "example": "October 05, 2005"
                },
                "description": {
                  "type": "string",
                  "example": "A vampire romance novel."
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Audiobook created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/audiobooks/{id}": {
      "get": {
        "summary": "Get audiobook by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Audiobook found"
          },
          "404": {
            "description": "Audiobook not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "summary": "Update an audiobook",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "author": { "type": "string" },
                "listening_length": { "type": "string" },
                "publisher": { "type": "string" },
                "narrator": { "type": "string" },
                "ASIN": { "type": "string" },
                "audio_release_date": { "type": "string" },
                "description": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Audiobook updated"
          },
          "404": {
            "description": "Audiobook not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "summary": "Delete an audiobook",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Audiobook deleted"
          },
          "404": {
            "description": "Audiobook not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
